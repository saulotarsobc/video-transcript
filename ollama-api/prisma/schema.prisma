generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id
  name  String
  email String

  Chat Chat[]

  @@map("users")
}

model Chat {
  id String @id @default(cuid())

  Message Message[]
  User    User?     @relation(fields: [userId], references: [id])
  userId  String?

  @@map("chats")
}

model Message {
  id   String @id @default(cuid())
  text String

  chat   Chat   @relation(fields: [chatId], references: [id])
  chatId String
}
